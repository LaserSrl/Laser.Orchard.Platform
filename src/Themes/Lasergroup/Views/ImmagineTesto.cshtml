@{
    dynamic item = Model.ContentItem;
}

<div class="row row-servizi">
	<div class="col-xs-12 col-md-5 col-lg-4 col-xl-2 text-center">
		<img src="@item.DettaglioImmagineTesto.Image.FirstMediaUrl"  title="@item.DettaglioImmagineTesto.Image.MediaParts[0].Title" alt="@item.DettaglioImmagineTesto.Image.MediaParts[0].AlternateText" class="img-responsive">
		<h2 class="business-claim">@item.TitlePart.Title</h2>
	</div>
	<div class="col-xs-12 col-md-7 col-lg-8 col-xl-10">
		@Html.Raw(item.BodyPart.Text)
	</div>
</div>
