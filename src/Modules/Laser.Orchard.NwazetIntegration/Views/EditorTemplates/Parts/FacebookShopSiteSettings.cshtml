@using Laser.Orchard.NwazetIntegration.Models

@model FacebookShopSiteSettingsPart

<fieldset>
    <div>
        <label for="@Html.FieldIdFor(m=>m.ApiBaseUrl)">@T("Api base url")</label>
        @Html.TextBoxFor(m => m.ApiBaseUrl, new { @class = "text medium" })
        <span class="hint">@T("Base url for api calls to Facebook Graph services")</span>
    </div>
</fieldset>
<fieldset>
    <div>
        <label for="@Html.FieldIdFor(m=>m.DefaultJsonForProductUpdate)">@T("Default json")</label>
        @Html.TextAreaFor(m => m.DefaultJsonForProductUpdate, new { @class = "text medium tokenized", rows = "20" })
        <span class="hint">@T("This is the json body for product creation / update on Facebook shop.")</span>
        <span class="hint">@T("This value will be used when no specific json is set in the FacebookProductPart of the product content definition.")</span>
    </div>
</fieldset>
<fieldset>
    <div>
        <label for="@Html.FieldIdFor(m=>m.UserName)">@T("Facebook account name")</label>
        @Html.TextBoxFor(m=>m.UserName, new { @class="text medium" })
        <span class="hint">@T("Facebook account user name, needs the rights to manage the business")</span>
    </div>
</fieldset>
<fieldset>
    <div>
        <label for="@Html.FieldIdFor(m=>m.BusinessId)">@T("Facebook business id")</label>
        @Html.TextBoxFor(m => m.BusinessId, new { @class = "text medium" })
        <span class="hint">@T("Id of the Facebook business")</span>
    </div>
</fieldset>
<fieldset>
    <div>
        <label for="@Html.FieldIdFor(m=>m.CatalogId)">@T("Facebook catalog id")</label>
        @Html.TextBoxFor(m => m.CatalogId, new { @class = "text medium" })
        <span class="hint">@T("Id of the catalog on Facebook business")</span>
    </div>
</fieldset>